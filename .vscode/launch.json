{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // "args": "${command:pickArgs}",
            "env": {
                
            },
            "cwd": "${workspaceFolder}/custom_components/ecoflow_cloud"
        },
        {
            "name": "Home Assistant",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "cwd": "${workspaceFolder}/core",
            "justMyCode": false,
            "args": [
                "--debug",
                "-c",
                "config"
            ],
            "preLaunchTask": "Compile English translations"
        },
        {
            "name": "Home Assistant (skip pip)",
            "type": "debugpy",
            "request": "launch",
            "module": "homeassistant",
            "cwd": "${workspaceFolder}/core",
            "justMyCode": false,
            "args": [
                "--debug",
                "-c",
                "config",
                "--skip-pip"
            ],
            "preLaunchTask": "Compile English translations"
        },
        {
            "name": "Home Assistant: Changed tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}/core",
            "justMyCode": false,
            "args": [
                "--timeout=10",
                "--picked"
            ],
        },
        {
            // Debug by attaching to local Home Assistant server using Remote Python Debugger.
            // See https://www.home-assistant.io/integrations/debugpy/
            "name": "Home Assistant: Attach Local",
            "type": "debugpy",
            "request": "attach",
            "cwd": "${workspaceFolder}/core",
            "connect": {
                "port": 5678,
                "host": "localhost"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            // Debug by attaching to remote Home Assistant server using Remote Python Debugger.
            // See https://www.home-assistant.io/integrations/debugpy/
            "name": "Home Assistant: Attach Remote",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "port": 5678,
                "host": "homeassistant.local"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/usr/src/homeassistant"
                }
            ]
        }
    ]
}